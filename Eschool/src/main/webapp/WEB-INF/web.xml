<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
    <!-- 指定spring配置文件所在位置
    applicationContext-*.xml名字匹配
    applicationContext-base.xml
    applicationContext-dao.xml
    applicationContext-service.xml
     -->
  <context-param>
  	<param-name>contextConfigLocation</param-name>
  	<param-value>classpath:applicationContext-base.xml,classpath:applicationContext-dao.xml,classpath:applicationContext-service.xml</param-value>
  </context-param>
  	
  <!-- 在启动时,实例化Spring容器 -->
  <listener>
  	<listener-class>
org.springframework.web.context.ContextLoaderListener
  	</listener-class>
  </listener>
  <!-- 支持spring容器使用scope=request,session -->
  <listener>
  	<listener-class>
org.springframework.web.context.request.RequestContextListener
  	</listener-class>
  </listener>
  <!-- 防内存溢出 -->
  <listener>
  <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
 </listener>
  <!-- 自定义listener -->
   <listener>
        <listener-class>com.changh.eschool.listener.SessionListener</listener-class>
    </listener>
